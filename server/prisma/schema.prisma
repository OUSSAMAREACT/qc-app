generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Specialty {
  id         Int        @id @default(autoincrement())
  name       String     @unique
  createdAt  DateTime   @default(now())
  categories Category[]
  users      User[]
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  password    String
  name        String?
  role        String       @default("STUDENT")
  status      String       @default("PENDING") // PENDING, ACTIVE, REJECTED
  resetToken  String?
  resetTokenExpiry DateTime?
  createdAt   DateTime     @default(now())
  specialtyId Int?
  results     QuizResult[]
  specialty   Specialty?   @relation(fields: [specialtyId], references: [id])
  submissions ExamSubmission[]
  badges      Badge[]
  progress    ExamProgress[]
  questionHistory UserQuestionHistory[]
  mistakes        UserMistake[]
  
  // Profile Fields
  city        String?
  hospital    String?
  gender      String?      // "MALE", "FEMALE"
  phoneNumber String?
  premiumExpiresAt DateTime?

  // Gamification
  currentStreak Int      @default(0)
  longestStreak Int      @default(0)
  lastStudyDate DateTime?
  weeklyProgress WeeklyProgress[]

  // Onboarding
  onboardingCompleted Boolean  @default(false)
  examDate            DateTime?
  studyMinutesPerDay  Int?
  comments            Comment[]
  notifications       Notification[]
  payments            Payment[]
}

model Payment {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  receiptUrl  String
  planType    String?  // 1_MONTH, 3_MONTHS, 1_YEAR
  status      String   @default("PENDING") // PENDING, APPROVED, REJECTED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model WeeklyProgress {
  id                Int      @id @default(autoincrement())
  userId            Int
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  year              Int
  weekNumber        Int
  questionsAnswered Int      @default(0)
  daysStudied       Int      @default(0)
  goalQuestions     Int      @default(100)
  goalDays          Int      @default(5)
  updatedAt         DateTime @updatedAt

  @@unique([userId, year, weekNumber])
}

model Category {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  createdAt   DateTime   @default(now())
  specialtyId Int?
  isFree      Boolean    @default(false)
  specialty   Specialty? @relation(fields: [specialtyId], references: [id])
  questions   Question[]
}

model Question {
  id          Int      @id @default(autoincrement())
  text        String
  difficulty  String   @default("Moyen")
  createdAt   DateTime @default(now())
  categoryId  Int
  explanation String?
  choices     Choice[]
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  weeklyExams WeeklyExam[]
  comments    Comment[]
  audioFile   String?   // Cached TTS audio filename
  userHistory UserQuestionHistory[]
  mistakes    UserMistake[]
}

model Choice {
  id         Int      @id @default(autoincrement())
  text       String
  isCorrect  Boolean  @default(false)
  questionId Int
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

model WeeklyExam {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  startDate   DateTime? @default(now())
  endDate     DateTime
  questions   Question[]
  submissions ExamSubmission[]
  badges      Badge[]
  progress    ExamProgress[]
  createdAt   DateTime  @default(now())
}

model ExamSubmission {
  id          Int        @id @default(autoincrement())
  userId      Int
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  examId      Int
  exam        WeeklyExam @relation(fields: [examId], references: [id], onDelete: Cascade)
  score       Int
  answers     Json?      // Stores { questionId: [choiceId, ...] }
  submittedAt DateTime   @default(now())

  @@unique([userId, examId]) // One submission per user per exam
}

model Badge {
  id        Int        @id @default(autoincrement())
  userId    Int
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String     // "GOLD", "SILVER", "BRONZE"
  examId    Int
  exam      WeeklyExam @relation(fields: [examId], references: [id], onDelete: Cascade)
  awardedAt DateTime   @default(now())
}

model QuizResult {
  id             Int      @id @default(autoincrement())
  score          Int
  totalQuestions Int
  createdAt      DateTime @default(now())
  userId         Int
  categoryName   String?
  answers        Json?    // Stores { questionId: choiceId }
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ExamProgress {
  id        Int        @id @default(autoincrement())
  userId    Int
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  examId    Int
  exam      WeeklyExam @relation(fields: [examId], references: [id], onDelete: Cascade)
  answers   Json       // Stores { questionId: [choiceId, ...] }
  updatedAt DateTime   @updatedAt

  @@unique([userId, examId])
}

model SystemSetting {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt
}

model Comment {
  id         Int      @id @default(autoincrement())
  text       String
  createdAt  DateTime @default(now())
  userId     Int
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  questionId Int
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String   // 'COMMENT', 'SYSTEM', etc.
  message   String
  link      String?  // URL or path to redirect to
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model UserQuestionHistory {
  id         Int      @id @default(autoincrement())
  userId     Int
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  questionId Int
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  answeredAt DateTime @default(now())
  isCorrect  Boolean

  @@unique([userId, questionId])
}

model UserMistake {
  id         Int      @id @default(autoincrement())
  userId     Int
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  questionId Int
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  addedAt    DateTime @default(now())

  @@unique([userId, questionId])
}

model IgnoredWord {
  id        Int      @id @default(autoincrement())
  word      String   @unique
  createdAt DateTime @default(now())
}

model KnowledgeBaseDocument {
  id        Int      @id @default(autoincrement())
  title     String
  filename  String
  content   String   @db.Text // Store extracted text
  type      String   // "PDF", "TXT"
  category  String?  // Optional category for filtering
  createdAt DateTime @default(now())
}
