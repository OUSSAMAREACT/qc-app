generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Specialty {
  id         Int        @id @default(autoincrement())
  name       String     @unique
  createdAt  DateTime   @default(now())
  categories Category[]
  users      User[]
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  password    String
  name        String?
  role        String       @default("STUDENT")
  createdAt   DateTime     @default(now())
  specialtyId Int?
  results     QuizResult[]
  specialty   Specialty?   @relation(fields: [specialtyId], references: [id])
  submissions ExamSubmission[]
  badges      Badge[]
  progress    ExamProgress[]
}

model Category {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  createdAt   DateTime   @default(now())
  specialtyId Int?
  specialty   Specialty? @relation(fields: [specialtyId], references: [id])
  questions   Question[]
}

model Question {
  id          Int      @id @default(autoincrement())
  text        String
  difficulty  String   @default("Moyen")
  createdAt   DateTime @default(now())
  categoryId  Int
  explanation String?
  choices     Choice[]
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  weeklyExams WeeklyExam[]
}

model Choice {
  id         Int      @id @default(autoincrement())
  text       String
  isCorrect  Boolean  @default(false)
  questionId Int
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

model WeeklyExam {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  startDate   DateTime? @default(now())
  endDate     DateTime
  questions   Question[]
  submissions ExamSubmission[]
  badges      Badge[]
  progress    ExamProgress[]
  createdAt   DateTime  @default(now())
}

model ExamSubmission {
  id          Int        @id @default(autoincrement())
  userId      Int
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  examId      Int
  exam        WeeklyExam @relation(fields: [examId], references: [id], onDelete: Cascade)
  score       Int
  submittedAt DateTime   @default(now())

  @@unique([userId, examId]) // One submission per user per exam
}

model Badge {
  id        Int        @id @default(autoincrement())
  userId    Int
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String     // "GOLD", "SILVER", "BRONZE"
  examId    Int
  exam      WeeklyExam @relation(fields: [examId], references: [id], onDelete: Cascade)
  awardedAt DateTime   @default(now())
}

model QuizResult {
  id             Int      @id @default(autoincrement())
  score          Int
  totalQuestions Int
  createdAt      DateTime @default(now())
  userId         Int
  categoryName   String?
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ExamProgress {
  id        Int        @id @default(autoincrement())
  userId    Int
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  examId    Int
  exam      WeeklyExam @relation(fields: [examId], references: [id], onDelete: Cascade)
  answers   Json       // Stores { questionId: [choiceId, ...] }
  updatedAt DateTime   @updatedAt

  @@unique([userId, examId])
}
